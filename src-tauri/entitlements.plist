<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow file access for reading/writing user files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allow reading files from user directories (Desktop, Documents, Downloads) -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>

    <!-- Allow network access for HTTP/WebSocket connections -->
    <key>com.apple.security.network.client</key>
    <true/>

    <key>com.apple.security.network.server</key>
    <true/>

    <!-- Allow subprocess execution (for Python backend) -->
    <key>com.apple.security.app-sandbox</key>
    <true/>

    <!-- Inherit the parent's security -->
    <key>com.apple.security.inherit</key>
    <true/>

    <!-- Allow temporary exception for file system access -->
    <key>com.apple.security.temporary-exception.files.absolute-path.read-write</key>
    <array>
        <string>/</string>
    </array>
</dict>
</plist>
