{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "jterm",
  "version": "1.0.0",
  "identifier": "com.jterm.desktop",
  "build": {
    "frontendDist": "../dist-placeholder",
    "beforeDevCommand": "",
    "beforeBuildCommand": "mkdir -p ../dist-placeholder && echo '<!DOCTYPE html><html><body>Loading...</body></html>' > ../dist-placeholder/index.html"
  },
  "app": {
    "windows": [
      {
        "title": "jterm - Desktop Terminal",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "url": "about:blank"
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:* ws://localhost:* wss://localhost:*; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: http://localhost:* https:; media-src 'self' http://localhost:*; font-src 'self' data:;",
      "capabilities": ["default", "remote-clipboard"]
    },
    "withGlobalTauri": true,
    "trayIcon": null
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "open-url",
          "cmd": "open",
          "args": true
        }
      ]
    },
    "dialog": {
      "all": true,
      "ask": true,
      "confirm": true,
      "message": true,
      "open": true,
      "save": true
    },
    "fs": {
      "scope": [
        "$APPDATA/**",
        "$APPLOCALDATA/**",
        "$APPCONFIG/**",
        "$HOME/.local/share/jterm/**",
        "$HOME/Library/Application Support/jterm/**"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "DeveloperTool",
    "copyright": "",
    "longDescription": "Web-based terminal emulator with multimedia support, AI assistance, and session recording capabilities",
    "shortDescription": "Advanced terminal emulator for developers",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/jterm-backend"
    ],
    "macOS": {
      "entitlements": "entitlements.plist",
      "exceptionDomain": "",
      "frameworks": [],
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
