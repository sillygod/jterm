# Web Terminal Environment Configuration
# Copy this file to .env and update with your values

# ============================================================================
# CORE SETTINGS
# ============================================================================

# Enable debug mode (shows detailed logs)
TERMINAL_DEBUG=false

# Server configuration
TERMINAL_HOST=0.0.0.0
TERMINAL_PORT=8000

# Secret key for JWT tokens (CHANGE THIS IN PRODUCTION!)
TERMINAL_SECRET_KEY=your-secret-key-change-in-production

# ============================================================================
# DATABASE
# ============================================================================

# SQLite database file location
DATABASE_URL=sqlite+aiosqlite:///./webterminal.db

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================

# JWT configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ============================================================================
# AI ASSISTANT
# ============================================================================

# AI Provider (openai|anthropic|local)
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Anthropic Configuration
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local/OpenAI-Compatible Provider Configuration
# Use this for Mistral AI, together.ai, Groq, OpenRouter, Ollama, etc.
# Examples:
#   Mistral AI: https://api.mistral.ai
#   together.ai: https://api.together.xyz
#   Groq: https://api.groq.com/openai
#   OpenRouter: https://openrouter.ai/api
#   Ollama: http://localhost:11434
LOCAL_AI_ENDPOINT=
LOCAL_AI_API_KEY=
LOCAL_AI_MODEL=mistral-large-latest

# OpenAI-Compatible Provider Examples:
# For Mistral AI:
#   AI_PROVIDER=local
#   LOCAL_AI_ENDPOINT=https://api.mistral.ai
#   LOCAL_AI_API_KEY=your-mistral-api-key
#   LOCAL_AI_MODEL=mistral-large-latest
#
# For together.ai:
#   AI_PROVIDER=local
#   LOCAL_AI_ENDPOINT=https://api.together.xyz
#   LOCAL_AI_API_KEY=your-together-api-key
#   LOCAL_AI_MODEL=mistralai/Mixtral-8x7B-Instruct-v0.1
#
# For Groq:
#   AI_PROVIDER=local
#   LOCAL_AI_ENDPOINT=https://api.groq.com/openai
#   LOCAL_AI_API_KEY=your-groq-api-key
#   LOCAL_AI_MODEL=mixtral-8x7b-32768

# ============================================================================
# MEDIA SETTINGS
# ============================================================================

# Maximum file size for media uploads (in bytes)
# 50MB for videos, 10MB for images
MEDIA_MAX_SIZE=52428800

# Media storage directory
MEDIA_STORAGE_PATH=./uploads

# ============================================================================
# SESSION RECORDING
# ============================================================================

# Maximum recording duration (in seconds)
RECORDING_MAX_DURATION=3600

# Recording retention period (in days)
RECORDING_RETENTION_DAYS=30

# ============================================================================
# PERFORMANCE & CACHING
# ============================================================================

# Cache TTL (in seconds)
CACHE_TTL=3600

# Maximum sessions in memory
SESSION_CACHE_SIZE=1000

# Maximum media files cached
MEDIA_CACHE_SIZE=100

# ============================================================================
# WEBSOCKET SETTINGS
# ============================================================================

# WebSocket ping interval (in seconds)
WEBSOCKET_PING_INTERVAL=20

# WebSocket ping timeout (in seconds)
WEBSOCKET_PING_TIMEOUT=10

# WebSocket close timeout (in seconds)
WEBSOCKET_CLOSE_TIMEOUT=10
